@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "Computers";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary" asp-action="Create">Criar novo computador</a>


@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado.</p>
} 
else 
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ram</th>
                <th>Processor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var computer in Model)
            {
                <tr>
                    <th>@computer.Id</th>
                    <th>@computer.Ram</th>
                    <th>@computer.Processor</th>
                    <th>
                        <a class="btn btn-primary btn-sm" asp-controller="Computer" asp-action="Show" asp-route-id="@computer.Id">
                            Ver Detalhes
                        </a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}